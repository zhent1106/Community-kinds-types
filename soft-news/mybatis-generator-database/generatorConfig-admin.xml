<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.soft1851.my.mapper.MyMapper"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/soft_news?serverTimezone=UTC"
                        userId="root"
                        password="root">
        </jdbcConnection>


        <javaModelGenerator targetPackage="com.soft1851.pojo" targetProject="mybatis-generator-database/src/main/java"/>


        <sqlMapGenerator targetPackage="mapper.admin" targetProject="mybatis-generator-database/src/main/resources"/>


        <javaClientGenerator targetPackage="com.soft1851.admin.mapper" targetProject="mybatis-generator-database/src/main/java" type="XMLMAPPER"/>

        <table tableName="admin_user"></table>

    </context>
</generatorConfiguration>